{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block content %}
    <div class="min-h-screen flex items-center justify-center pb-50">
        <div class="card bg-base-100 w-96 shadow-sm">
            <div class="card-body">
                <h2 class="card-title">User info!</h2>
                <div class="overflow-x-auto rounded-box border border-base-content/5 bg-base-100">
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ user.id }}</td>
                        </tr>
                        <tr>
                            <th>Username</th>
                            <td>{{ user.username }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th>Role</th>
                            <td>{{ user.roles[0] }}</td>
                        </tr>
                        <tr>
                            <th> Wishlist</th>
                            <td>
                                <div class="overflow-x-auto">
                                    <table class="table w-full">
                                        <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Festival Name</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for festival in user.wishlist %}
                                            <tr class="hover:bg-base-300">
                                                <td>{{ festival.id }}</td>
                                                <td>{{ festival.name }}</td>
                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="4">no records found</td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>


                <div class="flex justify-center gap-4 mt-4">
                    <a href="{{ path('app_user_index') }}" class="btn btn-info">Back to list</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn">Edit</a>
                    {{ include('user_admin/_delete_form.html.twig') }}
                </div>

            </div>
        </div>
    </div>
{% endblock %}
