{% extends 'base.html.twig' %}

{% block title %}Band{% endblock %}

{% block content %}
    <div class="min-h-screen flex items-center justify-center pb-50">
        <div class="card bg-base-100 w-96 shadow-sm">
            <div class="card-body">
                <h2 class="card-title">Band info!</h2>
                <div class="overflow-x-auto rounded-box border border-base-content/5 bg-base-100">
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ band.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ band.name }}</td>
                        </tr>
                        <tr>
                            <th>Genre</th>
                            <td>{{ band.musicGenre.value }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>


                <div class="flex justify-center gap-4 mt-4">
                    <a href="{{ path('app_band_index') }}" class="btn btn-info">Back to list</a>
                    <a href="{{ path('app_band_edit', {'id': band.id}) }}" class="btn">Edit</a>
                    {{ include('band/_delete_form.html.twig') }}
                </div>

            </div>
        </div>
    </div>
{% endblock %}
