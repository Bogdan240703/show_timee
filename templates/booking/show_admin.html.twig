{% extends 'base.html.twig' %}

{% block title %}Booking{% endblock %}

{% block content %}
    <div class="min-h-screen flex items-center justify-center pb-50">
        <div class="card bg-base-100 w-96 shadow-sm">
            <div class="card-body">
                <h2 class="card-title">Booking info!</h2>
                <div class="overflow-x-auto rounded-box border border-base-content/5 bg-base-100">
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ booking.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ booking.fullname }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ booking.email }}</td>
                        </tr>
                        <tr>
                            <th>Festival</th>
                            <td>{{ booking.festival.name }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>


                <div class="flex justify-center gap-4 mt-4">
                    <a href="{{ path('app_booking_index_admin') }}" class="btn btn-info">Back to list</a>
                    <a href="{{ path('app_booking_edit_admin', {'id': booking.id}) }}" class="btn">Edit</a>
                    {{ include('booking/_delete_form.html.twig') }}
                </div>

            </div>
        </div>
    </div>
{% endblock %}
