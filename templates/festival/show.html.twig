{% extends 'base.html.twig' %}

{% block title %}Festival{% endblock %}

{% block content %}
    <div class="min-h-screen flex items-center justify-center pb-50">
        <div class="card bg-base-100 w-96 shadow-sm">
            <div class="card-body">
                <h2 class="card-title">Festival info!</h2>
                <div class="overflow-x-auto rounded-box border border-base-content/5 bg-base-100">
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ festival.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ festival.name }}</td>
                        </tr>
                        <tr>
                            <th>Location</th>
                            <td>{{ festival.location }}</td>
                        </tr>
                        <tr>
                            <th>Price</th>
                            <td>{{ festival.price }}$</td>
                        </tr>
                        <tr>
                            <th>Start Date</th>
                            <td>{{ festival.startDate|date('Y-m-d') }}</td>
                        </tr>
                        <tr>
                            <th>End Date</th>
                            <td>{{ festival.endDate|date('Y-m-d') }}</td>
                        </tr>
                        <tr>
                            <th> Coming Bands</th>
                            <td>
                                <div class="overflow-x-auto">
                                    <table class="table w-full">
                                        <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Name</th>
                                            <th>Genre</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for band in festival.bands %}
                                            <tr class="hover:bg-base-300">
                                                <td>{{ band.id }}</td>
                                                <td>{{ band.name }}</td>
                                                <td>{{ band.musicGenre.value }}</td>
                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="4">no records found</td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>


                <div class="flex justify-center gap-4 mt-4">
                    <a href="{{ path('app_festival_index') }}" class="btn btn-info">Back to list</a>
                    <a href="{{ path('app_festival_edit', {'id': festival.id}) }}" class="btn">Edit</a>
                    {{ include('festival/_delete_form.html.twig') }}
                </div>

            </div>
        </div>
    </div>
{% endblock %}
